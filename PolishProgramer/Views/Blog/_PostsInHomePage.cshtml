@model BlogPost
@{ 

    
}


<article id="@Model.Id" class="group post-2854 post type-post status-publish format-image has-post-thumbnail hentry category-mixed tag-algae tag-detox tag-smoothie post_format-post-format-image">
    <div class="post-inner post-hover">

        <div class="post-thumbnail">
            <a href="Blog/ShowPost/@Model.Id" title="C">
                <img width="520" height="245" src="@Url.Content("~/")wp-content/uploads/sites/9/2013/10/photo-1423753623104-718aaace6772-520x245.jpg" class="attachment-thumb-medium size-thumb-medium wp-post-image" alt="" >
